@{
    ViewBag.Title = "調整營業狀態";
    Layout = "~/Views/Shared/_LayoutManage.cshtml";
}


<div class="row justify-content-center">
        <form action="@Url.Action("setBusinessStatus")" method="post">
            <div class="col-md-4 mt-3">
                @if (Model.Status == 0)
                {
                    <p>營業狀態：營業中</p>
                    <p>正常接收訂單</p>
                }
                @if (Model.Status == 1)
                {
                    <p>營業狀態：忙碌中</p>
                    <p>暫停接收訂單</p>
                }

            </div>
            <div class="col-md-4 mt-3">
                @if (Model.Status == 0)
                {
                    <input type="hidden" id="Status" name="Status" required="required" readonly="readonly" class="form-control" value="1" />
                    <input type="submit" value="更改為忙碌中" class="btn btn-danger mt-3 " />
                }
                @if (Model.Status == 1)
                {
                    <input type="hidden" id="Status" name="Status" required="required" readonly="readonly" class="form-control" value="0" />
                    <input type="submit" value="更改為營業中" class="btn btn-success mt-3 " />
                }
            </div>
        </form>
</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
